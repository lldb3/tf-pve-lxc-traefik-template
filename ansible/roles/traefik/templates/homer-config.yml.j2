---
# Homepage configuration
# See https://fontawesome.com/v5/search for icons options

title: "Media Home"
subtitle: "Homer"
logo: "assets/icons/logo.png"
# icon: "fas fa-skull-crossbones" # Optional icon

header: true
footer: '<p>Created with <span class="has-text-danger">❤️</span> with <a href="https://bulma.io/">bulma</a>, <a href="https://vuejs.org/">vuejs</a> & <a href="https://fontawesome.com/">font awesome</a> // Fork me on <a href="https://github.com/bastienwirtz/homer"><i class="fab fa-github-alt"></i></a></p>' # set false if you want to hide it.
connectivityCheck: true
columns: "3" # "auto" or number (must be a factor of 12: 1, 2, 3, 4, 6, 12)

# Set the default layout and color scheme
defaults:
  layout: columns # Either 'columns', or 'list'
  colorTheme: auto # One of 'auto', 'light', or 'dark'

# Will load custom CSS files. Especially useful for custom icon sets.
stylesheet:
  - "assets/custom.css"

theme: default
colors:
  light:
    highlight-primary: "#323946"
    highlight-secondary: "#323946"
    highlight-hover: "#323946"
    background: "#2E3440"
    card-background: "#323946"
    text: "#81A1C1"
    text-header: "#81A1C1"
    text-title: "#D8DEE9"
    text-subtitle: "#ECEFF4"
    status-offline: "#BF616A"
    status-online: "#A3BE8C"

  dark:
    highlight-primary: "#323946"
    highlight-secondary: "#323946"
    highlight-hover: "#323946"
    background: "#2E3440"
    card-background: "#323946"
    text: "#81A1C1"
    text-header: "#81A1C1"
    text-title: "#D8DEE9"
    text-subtitle: "#ECEFF4"
    status-offline: "#BF616A"
    status-online: "#A3BE8C"

# Optional message
message:
  # url: "https://<my-api-endpoint>" # Can fetch information from an endpoint to override value below.
  # mapping: # allows to map fields from the remote format to the one expected by Homer
  #   title: 'id' # use value from field 'id' as title
  #   content: 'value' # value from field 'value' as content
  # refreshInterval: 10000 # Optional: time interval to refresh message
  #
  # Real example using chucknorris.io for showing Chuck Norris facts as messages:
  url: https://api.chucknorris.io/jokes/random
  mapping:
    title: "id"
    content: "value"
  refreshInterval: 10000
  style: "is-dark" # See https://bulma.io/documentation/components/message/#colors for styling options.
  # title: "Hey there!"
  icon: "fa fa-exclamation-triangle"
  # content: "Lorem ipsum dolor sit amet, consectetur adipiscing elit."

# Optional navbar
# links: [] # Allows for navbar (dark mode, layout, and search) without any links
links:
  - name: "Repo"
    icon: "fab fa-github"
    url: "https://github.com/bastienwirtz/homer"
    target: "_blank" # optional html a tag target attribute
  # this will link to a second homer page that will load config from additional-page.yml and keep default config values as in config.yml file
  # see url field and assets/additional-page.yml.dist used in this example:
  #- name: "another page!"
  #  icon: "fas fa-file-alt"
  #  url: "#additional-page"

# Services
# First level array represent a group.
# Leave only a "items" key if not using group (group name, icon & tagstyle are optional, section separation will not be displayed).
services:
  - name: "Shows"
    icon: "fa-solid fa-clapperboard"
    items:
      - name: "jellyseer"
        logo: "assets/logos/jellyseerr.svg"
        subtitle: "The overseer"
        url: "https://jellyseerr.{{ traefik_domain_name }}"
        endpoint: "https://jellyseerr.{{ traefik_domain_name }}"
        target: "_blank"

      - name: "jellyfin"
        logo: "assets/logos/jellyfin.svg"
        subtitle: "Jellyfin"
        url: "https://jellyfin.{{ traefik_domain_name }}"
        target: "_blank"

      - name: "sonarr HD"
        logo: "assets/logos/Sonarr.svg"
        subtitle: "Series collection"
        url: "https://sonarr-hd.{{ traefik_domain_name }}"
        target: "_blank"

      - name: "sonarr 4k"
        logo: "assets/logos/Sonarr.svg"
        subtitle: "Series collection"
        url: "https://sonarr-4k.{{ traefik_domain_name }}"
        target: "_blank"

      - name: "sonarr anime"
        logo: "assets/logos/Sonarr.svg"
        subtitle: "Series collection"
        url: "https://sonarr-anime.{{ traefik_domain_name }}"
        target: "_blank"

      - name: "radarr"
        logo: "assets/logos/Radarr.svg"
        subtitle: "Movies collection"
        url: "https://radarr.{{ traefik_domain_name }}"
        target: "_blank"

  - name: "Other media"
    icon: "fa-sharp fa-solid fa-music"
    items:
      - name: "Lidarr"
        logo: "assets/logos/Lidarr.svg"
        subtitle: "Music"
        url: "https://lidarr.{{ traefik_domain_name }}"
        target: "_blank"

      - name: "Readarr"
        logo: "assets/logos/Readarr.svg"
        subtitle: "Books"
        url: "https://readarr.{{ traefik_domain_name }}"
        target: "_blank"

